<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activies.MainActivity">
<!--
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></androidx.core.widget.NestedScrollView>-->
    <LinearLayout
        android:id="@+id/lnr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragmentHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="openFragHome"
                android:text="Acceuil"
                android:textColor="@android:color/white"
                android:textSize="9dp"
                app:backgroundTint="#000000" />

            <RelativeLayout
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <Button
                android:id="@+id/btn_fragmentHours"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="openFragHours"
                android:text="Horaires"
                android:textColor="@android:color/white"
                android:textSize="9dp"
                app:backgroundTint="#000000" />

            <RelativeLayout
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <Button
                android:id="@+id/btn_fragmentTickets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="openFragTickets"
                android:text="Tickets"
                android:textColor="@android:color/white"
                android:textSize="9dp"
                app:backgroundTint="#000000" />

            <RelativeLayout
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <Button
                android:id="@+id/btn_fragmentAbonnement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/face1"
                android:onClick="openFragAbonnements"
                android:text="Abonnements"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="8dp"
                app:backgroundTint="#040404" />





        </LinearLayout>

        <RelativeLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lnr1"
            android:layout_margin="5dp"
            android:background="@color/black">

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="611dp"
            android:layout_below="@id/separator"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"

            >

        </FrameLayout>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>