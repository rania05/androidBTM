<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="4dp"
    android:padding="4dp">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/contentBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/TransportNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
       <TextView
                android:id="@+id/TransportVille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TransportLigne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TransportStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TransportHeure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>

         <ImageButton
            android:id="@+id/btnAddTicket"
             android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@null"
            android:src="@drawable/ic_collections">

            </ImageButton>


        </LinearLayout>

</androidx.cardview.widget.CardView>