<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="4dp"
    android:padding="4dp">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/contentBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:weightSum="7">

            <TextView
                android:id="@+id/TicketDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"

                android:textColor="@color/black"
                android:textAppearance="@style/ShapeAppearance.MaterialComponents.LargeComponent"
                android:textSize="7dp"/>
            <TextView
                android:id="@+id/TicketNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TicketVille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/TicketLigne_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TicketStationDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/TicketStationArrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>

            <TextView
                android:id="@+id/TicketPrix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="9dp"/>



        </LinearLayout>

</androidx.cardview.widget.CardView>